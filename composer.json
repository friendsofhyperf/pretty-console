{
    "name": "friendsofhyperf/pretty-console",
    "description": "The pretty console component for Hyperf.",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "support": {
        "issues": "https://github.com/friendsofhyperf/components/issues",
        "source": "https://github.com/friendsofhyperf/components"
    },
    "require": {
        "friendsofhyperf/helpers": "^3.0",
        "hyperf/command": "~3.0.0",
        "hyperf/di": "~3.0.0",
        "hyperf/event": "~3.0.0",
        "hyperf/utils": "~3.0.0",
        "nunomaduro/termwind": "^1.13"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/ide-helper": "~3.0.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.5",
        "swoole/ide-helper": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\PrettyConsole\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "3.x-dev": "3.0-dev"
        },
        "hyperf": {
            "config": "FriendsOfHyperf\\PrettyConsole\\ConfigProvider"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 4096M -l 0 -c phpstan.neon ./src",
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit -c phpunit.xml --colors=always"
    }
}
